<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
  version="2.4">
  <display-name>Application Skeleton</display-name>
  <context-param>
    <param-name>org.seasar.framework.container.configPath</param-name>
    <param-value>ymir.dicon</param-value>
  </context-param>
  <filter>
    <filter-name>encodingfilter</filter-name>
    <filter-class>
      org.seasar.extension.filter.EncodingFilter
    </filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>multipartrequestfilter</filter-name>
    <filter-class>
      org.seasar.cms.ymir.MultipartRequestFilter
    </filter-class>
  </filter>
  <filter>
    <filter-name>pluggablefilter</filter-name>
    <filter-class>
      org.seasar.cms.pluggable.servlet.PluggableFilter
    </filter-class>
  </filter>
  <filter>
    <filter-name>ymir.request</filter-name>
    <filter-class>org.seasar.cms.ymir.servlet.YmirFilter</filter-class>
    <init-param>
      <param-name>dispatcher</param-name>
      <param-value>REQUEST</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>ymir.include</filter-name>
    <filter-class>org.seasar.cms.ymir.servlet.YmirFilter</filter-class>
    <init-param>
      <param-name>dispatcher</param-name>
      <param-value>INCLUDE</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>multipartrequestfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>pluggablefilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ymir.request</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ymir.include</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>
  <listener>
    <listener-class>
      org.seasar.cms.pluggable.servlet.PluggableListener
    </listener-class>
    <listener-class>
      org.seasar.cms.ymir.servlet.YmirListener
    </listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>__dummy__.html</welcome-file>
  </welcome-file-list>
</web-app>
