import org.seasar.dao.BeanMetaData;

#if ($database.isAvailableNonPrimaryKeyWritable())
import ${glPackageBaseCommonDBMeta}.${glDBMetaInterfaceName};
import ${glPackageBaseCommonDBMetaInfo}.${glColumnInfoName};
